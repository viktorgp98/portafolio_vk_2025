---
const socials = [
  {
    id: "footer-cv-icon",
    title: "CV",
    link: "/documents/CV-ViktorGonzalez-2025.pdf",
    download: "cv_viktorgonzalez.pdf",
    icon: "icon-[pepicons-print--cv]",
  },
  {
    id: "footer-linkedin-icon",
    title: "LinkedIn",
    link: "https://www.linkedin.com/in/viktorgonzalezp/",
    icon: "icon-[mdi--linkedin]",
  },
  {
    id: "footer-github-icon",
    title: "Github",
    link: "https://github.com/viktorgp98",
    icon: "icon-[ph--github-logo-duotone]",
  },
];

const techs = [
  {
    id: "tailwind",
    icon: "icon-[ri--tailwind-css-fill]",
  },
  {
    id: "astro",
    icon: "icon-[lineicons--astro]",
  },
];
---

<footer class="w-full bg-dark border-bd-color border-t-1 text-white">
  <div
    class="container mx-auto items-center py-10 flex flex-col gap-10 md:gap-60 md:flex-row space-y-4 md:space-y-0 relative lg:p-20"
  >
    <div class="footer-content">
      <p class="text-white">Desarrollado ðŸ’» por Viktor Gonzalez P.</p>
    </div>
    <div
      class="social-links items-center flex md:flex-row flex-row gap-4 md:gap-6 lg:gap-5 lg:w-auto"
    >
      {
        socials.map((social) => {
          return (
            <a
              class=" flex flex-row items-center justify-center"
              href={social.link}
              download={social.download}
              target="_blank"
            >
              <span
                class={`${social.icon} text-primary w-auto h-6 px-5`}
                role="img"
                aria-hidden="true"
                id={social.id}
              />
              <span class="cursor-pointer">{social.title}</span>
            </a>
          );
        })
      }
    </div>
    <div class="tech lg:flex flex-row gap-x-2 hidden w-auto">
      <p>Construido con:</p>
      <div class="flex flex-row gap-3 items-center">
        {
          techs.map((tech) => {
            return (
              <span
                class={`${tech.icon} w-6 h-6 text-primary`}
                role="img"
                aria-hidden="true"
              />
            );
          })
        }
      </div>
    </div>
  </div>
</footer>
